@model IEnumerable<SporEtkinlikleriYonetimSistemi.Models.Event>

<div class="card">
    <div class="card-header">
        Yaklaşan Etkinlikler
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var eventItem in Model)
        {
            <li class="list-group-item">
                <strong>@eventItem.Title</strong> - @eventItem.StartDate.ToShortDateString()
            </li>
        }
    </ul>
</div>
