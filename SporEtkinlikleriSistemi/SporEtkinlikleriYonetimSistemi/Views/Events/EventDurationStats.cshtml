@model IEnumerable<SporEtkinlikleriYonetimSistemi.Models.EventDurationStatsViewModel>

<h1>Event Duration Statistics</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event ID</th>
            <th>Event Title</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Duration (Days)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventID</td>
                <td>@item.eventtitle</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.durationindays</td>
            </tr>
        }
    </tbody>
</table>

