@model dynamic
@{
    ViewData["Title"] = "Katılımcı Kaydı";
}

<h2>Katılımcı Kaydı</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="ParticipantName">Adınız:</label>
        <input type="text" name="participantName" id="ParticipantName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="EventID">Katılacağınız Etkinlik:</label>
        <select name="selectedEventID" id="EventID" class="form-control">
            <option value="">Etkinlik Seçin</option>
            @foreach (var item in ViewData["Events"] as List<SelectListItem>)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>


